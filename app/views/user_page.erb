<div style="background-color:white">
	<h1>Welcome!</h1>
	<br>
	User Id: <%= @user.id %><br>
	Username: <%= @user.username %><br>
	User email: <%= @user.email %><br><br>

	<% if @user.group == nil %>
		<form action='/groups/new' method="get">
			<button type="submit">CREATE A GROUP</button>
		</form><br><br>
	<% else %>
		<h2>Here is the group you are part of:</h2>
		<a href = "/groups/<%=@user.group.id%>"><h2><%= @user.group.name %></h2></a>
	<% end %>

	<h2>Here are the groups you can join:</h2><br>

	<% Group.all.each do |group| %>
		<a href="/groups/<%=group.id%>"><%= group.name %></a><br>
	<% end %>
</div>
