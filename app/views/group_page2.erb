<div class="group">
	<h2 class="group_title"><%= @group.name %></h2><br><br>
	<div class="row">
		<div class="top_row col-md-12">
		<div class="photo col-md-4">
	<table >
		<tr>
			<td><img src="https://avatars3.githubusercontent.com/u/6128134?s=460" alt=""></td>
			<td><img src="https://avatars3.githubusercontent.com/u/6128134?s=460" alt=""></td>
		</tr>
		<tr>
			<td><img src="https://avatars3.githubusercontent.com/u/6128134?s=460" alt=""></td>
			<td><img src="https://avatars3.githubusercontent.com/u/6128134?s=460" alt=""></td>
		</tr>
	</table>
	</div>

	<div class="preference col-md-4">
			<h3>Group Preference</h3>
			<h3>Max Price: $<%=@searchprofile.max_price%></h3>
			<h3>Number of bedrooms: <%=@searchprofile.num_bedrooms%></h3>
			<h3>Number of bathrooms: <%=@searchprofile.num_bathrooms%></h3>
			<h3>Neighborhood: <%=@searchprofile.neighborhood%></h3><br>
	</div>
</div>

	 		<% (Listing.all).each do |listing| %>
			<div class="all_listing col-md-12">
				<div class="photo col-md-2">
					<img class="apartment" src="<%= listing.picture_url %>" alt="">
				</div>
				<div class="listing col-md-6">
					<ul>
						<li><a href="<%= listing.source_url %>">Apartment URL</a></li>
						<li><%= listing.price %></li>
						<li><%=  listing.num_bedrooms%></li>
						<li><%=  listing.num_bathrooms%></li>
						<li><%=  listing.neighborhood%></li>
					</ul>
				</div>
			</div>
			<% end %>
	

	</div>
	
	<% if @user %>
		<% if @user.group_id != @group.id %>
			<form action='/groups/<%=@group.id%>/join' method="post">
				<button type="submit">JOIN THIS GROUP</button>
			</form>
		<% end %>
	<% else %>
		<h3>Login on the <a href="/">home</a> page to join this group</h3>
	<% end %>
</div>
</div>